generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ImageAsset {
  id        String   @id @default(cuid())
  title     String?
  publicId  String
  url       String
  folder    String?
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model User {
  id              String              @id @default(cuid())
  name            String?
  email           String              @unique
  emailVerified   DateTime?
  emailVerifiedAt DateTime?
  image           String?
  role            Role                @default(CUSTOMER)
  isApproved      Boolean             @default(false)
  hashedPassword  String?
  passwordHash    String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  accounts        Account[]
  listings        Listing[]
  loans           Loan[]
  products        Product[]           @relation("SellerProducts")
  savings         Savings[]
  sessions        Session[]
  tokens          VerificationToken[]
}

model Savings {
  id        String   @id @default(cuid())
  userId    String
  balance   Decimal  @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Loan {
  id           String   @id @default(cuid())
  userId       String
  amount       Decimal
  interestRate Float
  status       String
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Decimal
  sellerId    String
  createdAt   DateTime @default(now())
  ads         Ad[]
  seller      User     @relation("SellerProducts", fields: [sellerId], references: [id])
}

model Ad {
  id        String   @id @default(cuid())
  productId String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Decimal
  realtorId   String
  type        String
  createdAt   DateTime @default(now())
  realtor     User     @relation(fields: [realtorId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id         String     @id @default(cuid())
  userId     String?
  type       TokenType?
  sentTo     String?
  codeHash   String?
  salt       String?
  attempts   Int        @default(0)
  expiresAt  DateTime?
  consumedAt DateTime?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  identifier String?
  token      String?    @unique
  expires    DateTime?
  user       User?      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([identifier, token])
  @@index([userId, type])
  @@index([type, sentTo])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String?
  email     String
  message   String
  createdAt DateTime @default(now())
}

enum Role {
  SUPER_ADMIN
  FINANCE_STAFF
  MARKETPLACE_SELLER
  REALTOR
  CUSTOMER
}

enum TokenType {
  verify_email
  reset_password
}
